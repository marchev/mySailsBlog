<div class="container">
	<div class="jumbotron">
		<% if (flash && flash.err) { %>
		<ul class="alert alert-success">
			<% Object.keys(flash.err.invalidAttributes).forEach(function (attr) { %>
			<li><%- attr %> : <%- JSON.stringify(flash.err.invalidAttributes[attr]) %></li>
			<% }) %>
		</ul>
		<% } %>
		<form action="/process-signup" method="post" class="form-signin">
			<h1 class="form-signin-heading">sign up</h1>

			<input type="text" class="form-control" placeholder="your e-mail address" name="email" />
			<input type="password" class="form-control" placeholder="password" name="password" />
			<input type="password" class="form-control" placeholder="confirm password" name="confirm_password" />
			<input type="text" class="form-control" placeholder="your name" name="name" />

			<br />
			<input type="submit" class="btn btn-lg btn-primary btn-block" value="sign up" />
			<input type="hidden" name="_csrf" value="<%= _csrf %>" />
		</form>
	</div>
</div>